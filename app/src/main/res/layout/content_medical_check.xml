<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_medical_check"
    tools:context="com.example.tinyl.care4old.MedicalCheck">


    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TableRow>

        <TextView

            android:id="@+id/testDate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Date de test : "
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"/>

        <TextView

            android:id="@+id/displayTestDate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"/>

        <Button android:id="@+id/pickTestDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pick a date"/>

    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/height"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Taille (cm) : "
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"/>

        <EditText
            android:id="@+id/sc_height"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Taille"
            android:inputType="numberDecimal" />

    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/weight"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Poids (kg): "
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"/>

        <EditText
            android:id="@+id/sc_weight"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Poids"
            android:inputType="numberDecimal" />

    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/bmi"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="IMC : "
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"/>

        <TextView
            android:id="@+id/sc_bmi"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Score "
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"/>

        <Button

            android:id="@+id/calcul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calculer l'IMC"
            />

    </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/albumin"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Albumine (g/L): "
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="center"/>

            <EditText
                android:id="@+id/sc_albumin"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Mesure"
                android:inputType="numberDecimal" />

        </TableRow>
    <TableRow>
        <TextView
            android:id="@+id/crp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="CRP (mg/L) : "
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"/>

        <EditText
            android:id="@+id/sc_crp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Mesure"
            android:inputType="numberDecimal" />

    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/vitd"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Vitamine D (Âµg) : "
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"/>

        <EditText
            android:id="@+id/sc_vitd"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Mesure"
            android:inputType="numberDecimal" />

    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/freq"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Battement/min : "
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"/>

        <EditText
            android:id="@+id/sc_freq"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Mesure"
            android:inputType="numberDecimal" />

    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/pressure"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Pression (mm de Hg): "
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"/>

        <EditText
            android:id="@+id/sc_pressure"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Mesure"
            android:inputType="numberDecimal" />

    </TableRow>

<TableRow>
        <RadioGroup
        android:id="@+id/GIR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checkedButton="@+id/no"
        android:orientation="vertical">

        <RadioButton

            android:id="@+id/no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/noGIR" />

        <RadioButton

            android:id="@+id/gir1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gir1" />

        <RadioButton

            android:id="@+id/gir2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GIR - 2" />

        <RadioButton

            android:id="@+id/gir3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GIR - 3" />
        <RadioButton

            android:id="@+id/gir4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GIR - 4" />

        </RadioGroup>
</TableRow>
    </TableLayout>
</ScrollView>