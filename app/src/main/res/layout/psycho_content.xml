<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <!-- Mini-Best Test -->

        <TextView

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Mini-best test "
            android:textColor="#000000"
            android:textStyle="bold"/>

        <!-- Champ 1 -->
        <TextView

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="Ajustement Postural /8"
            android:textColor="#000000"
            android:textStyle="bold"/>

        <EditText

            android:id="@+id/ajust_postural"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Ajustement postural"
            android:inputType="numberDecimal"/>

        <!-- Champ 2 -->
        <TextView

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="Reponse Posturale /8 "
            android:textColor="#000000"
            android:textStyle="bold"/>

        <EditText

            android:id="@+id/rep_posturale"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Reponse Posturale"
            android:inputType="numberDecimal"/>

        <!-- Champ 3 -->
        <TextView

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="Orientation Sensorielle /6 "
            android:textColor="#000000"
            android:textStyle="bold"/>

        <EditText

            android:id="@+id/or_sensor"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Orientation Sensorielle"
            android:inputType="numberDecimal"/>

        <!-- Champ 4 -->
        <TextView

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="Stabilité à la marche /10 "
            android:textColor="#000000"
            android:textStyle="bold"/>

        <EditText

            android:id="@+id/stab_march"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Stabilité à la marche"
            android:inputType="numberDecimal"/>

        <!-- Champ 5 -->
        <TextView

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="Total /32 "
            android:textColor="#000000"
            android:textStyle="bold"/>

        <EditText

            android:id="@+id/total"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Total"
            android:inputType="numberDecimal"/>


        <!-- Mini-Mental Test version Greco -->

        <TextView

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Mini-Mental State version Greco "
            android:textColor="#000000"
            android:textStyle="bold"/>



        <TextView

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="Score Global "
            android:textColor="#000000"
            android:textStyle="bold"/>

        <EditText

            android:id="@+id/sc_global"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Score Global"
            android:inputType="numberDecimal"/>

        <!-- Liste de mots -->

        <!-- Liste des mots choisis -->

        <TextView

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="Score Rappel Immediat "
            android:textColor="#000000"
            android:textStyle="bold"/>

        <EditText

            android:id="@+id/sc_ra_imm"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Score Rappel Immediat"
            android:inputType="numberDecimal"/>

        <TextView

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="Score Rappel Différé 1-3"
            android:textColor="#000000"
            android:textStyle="bold"/>

        <EditText

            android:id="@+id/sc_ra_diff"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Score Rappel Différé"
            android:inputType="numberDecimal"/>



        <!-- Mini GDS -->

        <TextView

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Mini GDS"
            android:textColor="#000000"
            android:textStyle="bold"/>

        <!-- Question 1 -->

        <TextView

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="Vous sentez-vous découragé et triste ?"
            android:textColor="#000000"
            android:textStyle="bold"/>

        <!-- Answer 1 -->
        <RadioGroup

            android:id="@+id/GDS1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkedButton="@+id/no1"
            android:orientation="horizontal"
            >

            <RadioButton

                android:id="@+id/yes1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oui"
                />

            <RadioButton

                android:id="@+id/no1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Non"
                />

        </RadioGroup>

        <!-- Question 2 -->

        <TextView

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="Etes-vous heureux la plupart du temps ?"
            android:textColor="#000000"
            android:textStyle="bold"/>

        <!-- Answer 2 -->

        <RadioGroup

            android:id="@+id/GDS2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkedButton="@+id/no2"
            android:orientation="horizontal"
            >

            <RadioButton

                android:id="@+id/yes2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oui"
                />

            <RadioButton

                android:id="@+id/no2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Non"
                />

        </RadioGroup>

        <!-- Question 3 -->

        <TextView

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="Avez vous le sentiment que votre vie est vide ?"
            android:textColor="#000000"
            android:textStyle="bold" />

        <!-- Answer 2 -->

        <RadioGroup

            android:id="@+id/GDS3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkedButton="@+id/no3"
            android:orientation="horizontal"
            >

            <RadioButton

                android:id="@+id/yes3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oui"
                />

            <RadioButton

                android:id="@+id/no3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Non"
                />

        </RadioGroup>

        <!-- Question 4 -->

        <TextView

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="Avez-vous l'impression que votre vie est désespérée ?"
            android:textColor="#000000"
            android:textStyle="bold"/>

        <!-- Answer 4 -->

        <RadioGroup

            android:id="@+id/GDS4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkedButton="@+id/no4"
            android:orientation="horizontal"
            >

            <RadioButton

                android:id="@+id/yes4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oui"
                />

            <RadioButton

                android:id="@+id/no4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Non"
                />

        </RadioGroup>


    </LinearLayout>
</ScrollView>