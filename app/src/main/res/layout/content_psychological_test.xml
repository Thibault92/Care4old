<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_psychological_test"
    tools:context="com.example.tinyl.care4old.PsychologicalTest">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- TITRE 1 -->

        <TextView

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Mini-best test "
            android:textColor="#000000"
            android:textStyle="bold" />

        <!-- Champ 1 -->
        <TableRow>

            <TextView

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Ajustement Postural /8"
                android:textColor="#000000"
                android:textStyle="italic" />

         <!--    <Button

                android:id="@+id/ajust_postural"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/Notes_8"
                android:text="Note" /> -->
            <!-- android:prompt="@string/Notes"/> -->


            <Spinner
                android:id="@+id/ajust_postural"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:entries="@array/Notes_8"/>

        </TableRow>


        <!-- Champ 2 -->

        <TableRow>

            <TextView

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Réponse Posturale /8"
                android:textColor="#000000"
                android:textStyle="italic" />

            <!--
            <Button

                android:id="@+id/rep_posturale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/Notes_8"
                android:text="Note" /> -->
            <!-- android:prompt="@string/Notes"/> -->


            <Spinner
                android:id="@+id/rep_posturale"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:entries="@array/Notes_8"/>


        </TableRow>

        <!-- Champ 3 -->

        <TableRow>

            <TextView

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Orientation Sensorielle /6"
                android:textColor="#000000"
                android:textStyle="italic" />

           <!--  <Button

                android:id="@+id/or_sensor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/Notes_6"
                android:text="Note" /> -->
            <!-- android:prompt="@string/Notes"/> -->

           <Spinner
            android:id="@+id/or_sensor"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:entries="@array/Notes_6"/>

        </TableRow>

        <!-- Champ 4 -->
        <TableRow>

            <TextView

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Stabilité à la marche /10"
                android:textColor="#000000"
                android:textStyle="italic" />

            <!-- <Button

                android:id="@+id/stab_march"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/Notes_10"
                android:text="Note" /> -->
            <!-- android:prompt="@string/Notes"/> -->


            <Spinner
                android:id="@+id/stab_march"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:entries="@array/Notes_10"/>


        </TableRow>

        <!-- Champ 5 -->
        <TableRow>

            <TextView

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Total /32"
                android:textColor="#000000"
                android:textStyle="italic" />

            <TextView

                android:id="@+id/total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:text="Note Finale" />

        </TableRow>


        <!-- TITRE 2 -->

        <TextView

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Mini-Mental State version Greco "
            android:textColor="#000000"
            android:textStyle="bold" />


        <TableRow>

            <TextView

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Score Global "
                android:textColor="#000000"
                android:textStyle="italic" />

            <EditText

                android:id="@+id/sc_global"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Score Global"
                android:inputType="numberDecimal" />

        </TableRow>

        <TableRow>

            <TextView

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Liste de mots utilisés: "
                android:textColor="#000000"
                android:textStyle="italic" />

            <!-- Liste de mots -->

            <!-- Liste des mots choisis -->

        </TableRow>


        <TableRow>

            <TextView

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Score Rappel Immediat "
                android:textColor="#000000"
                android:textStyle="italic" />

            <EditText

                android:id="@+id/sc_ra_imm"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Score Rappel Immediat"
                android:inputType="numberDecimal" />

        </TableRow>

        <TableRow>

            <TextView

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Score Rappel Différé 1-3"
                android:textColor="#000000"
                android:textStyle="italic" />

            <EditText

                android:id="@+id/sc_ra_diff"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Score Rappel Différé"
                android:inputType="numberDecimal" />

        </TableRow>


        <!-- TITRE 3 -->

        <TextView

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Mini GDS"
            android:textColor="#000000"
            android:textStyle="bold" />

        <!-- Question 1 -->

        <!--  <TableRow> -->
        <TextView

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Vous sentez-vous découragé et triste ?"
            android:textColor="#000000"
            android:textStyle="italic" />

        <!-- Answer 1 -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioGroup

                android:id="@+id/GDS1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkedButton="@+id/no1"
                android:orientation="horizontal">

                <RadioButton

                    android:id="@+id/yes1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Oui" />

                <RadioButton

                    android:id="@+id/no1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Non" />
            </RadioGroup>
        </TableRow>

        <!-- </TableRow> -->

        <!-- Question 2 -->

        <!-- <TableRow> -->

        <TextView

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Etes-vous heureux la plupart du temps ?"
            android:textColor="#000000"
            android:textStyle="italic" />

        <!-- Answer 2 -->

        <RadioGroup

            android:id="@+id/GDS2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkedButton="@+id/no2"
            android:orientation="horizontal">

            <RadioButton

                android:id="@+id/yes2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oui" />

            <RadioButton

                android:id="@+id/no2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Non" />

        </RadioGroup>

        <!-- </TableRow> -->


        <!-- Question 3 -->

        <!--  <TableRow> -->

        <TextView

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Avez vous le sentiment que votre vie est vide ?"
            android:textColor="#000000"
            android:textStyle="italic" />

        <!-- Answer 2 -->

        <RadioGroup

            android:id="@+id/GDS3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkedButton="@+id/no3"
            android:orientation="horizontal">

            <RadioButton

                android:id="@+id/yes3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oui" />

            <RadioButton

                android:id="@+id/no3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Non" />

        </RadioGroup>

        <!-- </TableRow> -->


        <!-- Question 4 -->

        <!--  <TableRow> -->

        <TextView

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Avez-vous l'impression que votre vie est désespérée ?"
            android:textColor="#000000"
            android:textStyle="italic" />

        <!-- Answer 4 -->

        <RadioGroup

            android:id="@+id/GDS4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkedButton="@+id/no4"
            android:orientation="horizontal">

            <RadioButton

                android:id="@+id/yes4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oui" />

            <RadioButton

                android:id="@+id/no4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Non" />

        </RadioGroup>

        <!-- </TableRow> -->


    </TableLayout>

</ScrollView>
