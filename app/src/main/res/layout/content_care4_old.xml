<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >


    <TableLayout
        android:orientation="vertical"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_care4_old"
        tools:context=".Care4Old">

        <TableRow>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Link to Hospitalisation" />

            <Button

                android:id="@+id/hospitalisation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="sendHospitalisation"
                android:text="Hospitalisation"
                android:layout_weight="1"/>

        </TableRow>

        <TableRow>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Link to Psycho Test" />

            <Button

                android:id="@+id/psycho_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="sendPsycho"
                android:text="Psycho Test"
                android:layout_weight="1"/>

        </TableRow>

        <TableRow>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Link to Kine Test" />

            <Button

                android:id="@+id/kine_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="sendKine"
                android:text="Kine Test"
                android:layout_weight="1"/>

        </TableRow>

     <!--   <TableRow>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Link to PAccount" />

            <Button

                android:id="@+id/proAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="sendPAccount"
                android:text="Professionnal Account" />

        </TableRow> -->

        <TableRow>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Link to MedicalCheck" />

            <Button

                android:id="@+id/medCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="sendMCheck"
                android:text="Medical Check"
                android:layout_weight="1"/>

        </TableRow>


    </TableLayout>
</ScrollView>
