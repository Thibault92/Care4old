<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_patient_page"
    tools:context="com.example.tinyl.care4old.PatientPage">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TableRow>

            <TextView

                android:id="@+id/welcomeText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Bienvenue,"
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="center"/>

            <TextView

                android:id="@+id/idUser"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="xxxxxx"
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="end"/>
        </TableRow>
        <TextView

            android:id="@+id/idPatient"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Nom Patient, Prenom Patient"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="start"/>

        <TextView
            android:id="@+id/personalInfo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/patient_info"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="start"/>

        <TableRow>

            <TextView
                android:id="@+id/firstname"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Prénom :"
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="start"/>

            <TextView
                android:id="@+id/birthday_bdd"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text=" Roger "
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="start"/>

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Nom :"
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="start"/>

            <TextView
                android:id="@+id/gender_bdd"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text=" Dupont "
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="start"/>

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/officename"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Nom du cabinet :"
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="start"/>

            <TextView
                android:id="@+id/is_assistance_bdd"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text=" Cabinet du médecin "
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="start"/>

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/adress"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Adresse :"
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="start"/>

            <TextView
                android:id="@+id/adress_bdd"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text=" xx "
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="start"/>

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/zip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Code Postal :"
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="start"/>

            <TextView
                android:id="@+id/zip_bdd"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text=" xx "
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="start"/>

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/city"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Ville :"
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="start"/>

            <TextView
                android:id="@+id/city_bdd"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text=" xx "
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="start"/>

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/phone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Téléphone fixe :"
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="start"/>

            <TextView
                android:id="@+id/phone_bdd"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text=" xx "
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="start"/>

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/mobile_phone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Téléphone portable :"
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="start"/>

            <TextView
                android:id="@+id/mobile_phone_bdd"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text=" xx "
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="start"/>

        </TableRow>

        <Button

            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="previousPage"
            android:text="@string/back"
            android:layout_weight="1"/>

    </TableLayout>
</ScrollView>
