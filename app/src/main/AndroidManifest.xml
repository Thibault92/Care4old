<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tinyl.care4old" >

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Care4Old"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PsychologicalTest"
            android:label="@string/title_activity_psychological_test"
            android:parentActivityName=".Care4Old"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.tinyl.care4old.Care4Old" />
        </activity>
        <activity
            android:name=".Hospitalisation"
            android:label="@string/title_activity_hospitalisation"
            android:parentActivityName=".Care4Old"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.tinyl.care4old.Care4Old" />
        </activity>
        <activity
            android:name=".Medication_Drugs"
            android:label="@string/title_activity_medication__drugs"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".ProfessionnalAccount"
            android:label="@string/title_activity_professionnal_account"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".MainPagePro"
            android:label="@string/title_activity_main_page_pro"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/search_config" />
        </activity>
        <activity
            android:name=".KinesitherapeuticalReport"
            android:label="@string/title_activity_kinesitherapeutical_report"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".MedicalCheck"
            android:label="@string/title_activity_medical_check"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".PatientPage"
            android:label="@string/title_activity_patient_page"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".PatientPagePerso"
            android:label="@string/title_activity_patient_page_perso"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".MenuPatient"
            android:label="@string/title_activity_menu_patient"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".PhysicianPage"
            android:label="@string/title_activity_physician_page"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".RegistrationActivity"
            android:label="@string/title_activity_registration" >
        </activity>
    </application>

</manifest>
